# ---- Build stage ----
FROM node:20 AS builder

ARG APP

WORKDIR /app

COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run build:$APP

# ---- Production stage ----
FROM node:20-slim AS production

WORKDIR /app

COPY package*.json ./

# npm v9+ 기준: --only=production 대신 --omit=dev 권장
RUN npm ci --only=production && npm cache clean --force

COPY --from=builder /app/dist ./dist

CMD ["node", "dist/apps/batch/main.js"]